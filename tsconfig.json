{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "incremental": true,
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "./src",
    "./dist/types/**/*.ts",
    "./next-env.d.ts",
    "lib/__tests__/addItem.test.tsx",
    "lib/__tests__/removeAllItems.test.tsx",
    "lib/__tests__/removeItem.test.tsx",
    "ThemeContext",
    "utils",
    "mocks/api",
    "mocks/mockPeople.ts"
  ],
  "exclude": ["./node_modules"]
}
